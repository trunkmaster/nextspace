APP_WRAPPER = Workspace.app
APP_WRAPPER_INSTALLED = $(DESTDIR)/$(GNUSTEP_SYSTEM_APPS)/$(APP_WRAPPER)
SHARED = obj

before-all::
	@ echo "Preparing WM..."
	@ ./WM.configure
	@ echo "Making WM external components ... "
	@ cd $(WM_DIR); make config-paths.h
	@ echo " Building raster graphics library in $(WM_DIR)/wrlib ... "
	@ cd $(WM_DIR)/wrlib; make
	@ echo " Building WINGs library in $(WM_DIR)/WINGs ... "
	@ cd $(WM_DIR)/WINGs; make

after-all::
	@ echo " Copying Viewers bundles into the app wrapper ..."
	@ find Viewers -iname '*.viewer' -exec cp -r '{}' $(APP_WRAPPER)/Resources ';'
	@ echo " Copying Preferenses bundles into the app wrapper ..."
	@ find Preferences -iname '*.wsprefs' -exec cp -r '{}' $(APP_WRAPPER)/Resources ';'
	@ echo " Copying Tools into the app wrapper..."
	@ cp "Tools/FileMover/$(SHARED)/FileMover.tool" $(APP_WRAPPER)/Resources
	@ cp "Tools/Sizer/$(SHARED)/Sizer.tool" $(APP_WRAPPER)/Resources

after-clean::
	@ echo "Making clean in WM ... "
	@ echo " Cleaning in $(WM_DIR)/wrlib ..."
	@ cd $(WM_DIR)/wrlib; make clean > /dev/null 2>&1
	@ echo " Cleaning in $(WM_DIR)/WINGs ..."
	@ cd $(WM_DIR)/WINGs; make clean > /dev/null 2>&1

before-install::
	@ mkdir -p $(APP_WRAPPER_INSTALLED)

after-install::
	@ echo " Copying header files into $(GNUSTEP_SYSTEM_HEADERS)/apps ..."
	@ mkdir -p $(DESTDIR)/$(GNUSTEP_SYSTEM_HEADERS)/apps
	@ cp Workspace.h $(DESTDIR)/$(GNUSTEP_SYSTEM_HEADERS)/apps
	@ echo "===> Installing WM resources ..."
	@ cd $(WM_DIR)/wrlib; make install DESTDIR=$(DESTDIR)
	@ cd $(WM_DIR)/WINGs; make install DESTDIR=$(DESTDIR)
# Rewrite some files
	@ cp -f /etc/skel/Library/Preferences/.WindowMaker/WMGLOBAL $(APP_WRAPPER_INSTALLED)/Resources/WM/
	@ cp -f /etc/skel/Library/Preferences/.WindowMaker/WMState $(APP_WRAPPER_INSTALLED)/Resources/WM/
	@ cp -f /etc/skel/Library/Preferences/.WindowMaker/WMWindowAttributes $(APP_WRAPPER_INSTALLED)/Resources/WM/
	@ cp -f /etc/skel/Library/Preferences/.WindowMaker/WindowMaker $(APP_WRAPPER_INSTALLED)/Resources/WM/

after-uninstall::
	@ echo "Uninstalling $(WM_DIR)/wrlib ..."
	@ cd $(WM_DIR)/wrlib; make uninstall > /dev/null 2>&1
	@ echo "Uninstalling $(WM_DIR)/WINGs ..."
	@ cd $(WM_DIR)/WINGs; make uninstall > /dev/null 2>&1
